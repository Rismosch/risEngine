    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ris_engine'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ris_engine",
                    "--package=ris_engine"
                ],
                "filter": {
                    "name": "ris_engine",
                    "kind": "bin"
                }
            },
            "args": [
                "--no-restart"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'it'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=it",
                    "--package=ris_engine"
                ],
                "filter": {
                    "name": "it",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}